<div class="container">
    <h1>Users List</h1>

    <div class="row">
        <div class="col">
        
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus fa=lg"></i> Add Users </a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">Created</th>
                        <th scope="col">Updated</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
               <tbody id="usersList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < users1.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= users1[count].Name %></td>
                            <td><%= users1[count].Email %></td>
                            <td><%= users1[count].Password %></td>
                            <td><%= users1[count].Created %></td>
                            <td><%= users1[count].Updated %></td>
                            <td class="text-center"><a href="/edit/<%= users1[count].id %>" class="btn btn-primary btn btn-sm edit"><i class="fa-solid fa-pen-to-square"></i>Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= users1[count].id %>" class="btn btn-danger btn btn-sm delete"><i class="fa-solid fa-trash-can"></i>Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

