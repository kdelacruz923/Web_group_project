<div class="container">
    <h1>Product List</h1>

    <div class="row">
        <div class="col">
        
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus fa=lg"></i> Add Product </a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Category</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
               <tbody id="productList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < product.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= product[count].Name %></td>
                            <td><%= product[count].Description %></td>
                            <td><%= product[count].Price %></td>
                            <td><%= product[count].Quantity %></td>
                            <td><%= product[count].Category %></td>
                            <td class="text-center"><a href="/edit/<%= product[count].id %>" class="btn btn-primary btn btn-sm edit"><i class="fa-solid fa-pen-to-square"></i>Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= product[count].id %>" class="btn btn-danger btn btn-sm delete"><i class="fa-solid fa-trash-can"></i>Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

