<div class="container">
    <h1>Book List</h1>

    <div class="row">
        <div class="col">
        
            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus fa=lg"></i> Add Books </a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">ISBN</th>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">Publisher</th>
                        <th scope="col">Year</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
               <tbody id="bookList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < books.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= books[count].ISBN %></td>
                            <td><%= books[count].Title %></td>
                            <td><%= books[count].Author %></td>
                            <td><%= books[count].Publisher %></td>
                            <td><%= books[count].Year %></td>
                            <td class="text-center"><a href="/edit/<%= product[count].id %>" class="btn btn-primary btn btn-sm edit"><i class="fa-solid fa-pen-to-square"></i>Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= product[count].id %>" class="btn btn-danger btn btn-sm delete"><i class="fa-solid fa-trash-can"></i>Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

